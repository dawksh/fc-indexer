{
  "name": "fc-indexer",
  "module": "index.ts",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "build:prod": "bun build src/index.ts --outdir dist --target node --minify"
  },
  "dependencies": {
    "@farcaster/hub-nodejs": "^0.15.6",
    "dotenv": "^17.2.2",
    "redis": "^5.8.2",
    "zod": "^4.1.5"
  }
}
