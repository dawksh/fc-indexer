{
  "name": "fc-indexer",
  "module": "index.ts",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "build:prod": "bun build src/index.ts --outdir dist --target node --minify"
  },
  "dependencies": {
    "@farcaster/hub-nodejs": "^0.15.6",
    "dotenv": "^17.2.2",
    "zod": "^4.1.5"
  }
}
